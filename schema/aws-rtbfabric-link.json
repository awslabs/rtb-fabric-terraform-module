{
    "typeName": "AWS::RTBFabric::Link",
    "description": "Resource Type definition for AWS::RTBFabric::Link Resource Type",
    "definitions": {
        "LinkId": {
            "type": "string",
            "pattern": "^link-[a-z0-9-]{1,25}$"
        },
        "RtbAppId": {
            "type": "string",
            "pattern": "^rtbapp-[a-z0-9-]{1,25}$"
        },
        "ResponderErrorMaskingLoggingType": {
            "type": "string",
            "enum": [
                "NONE",
                "METRIC",
                "RESPONSE"
            ]
        },
        "ResponderErrorMaskingForHttpCode": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "HttpCode": {
                    "type": "string",
                    "pattern": "^DEFAULT|4XX|5XX|\\d{3}$",
                    "maxLength": 7,
                    "minLength": 3
                },
                "Action": {
                    "type": "string",
                    "enum": [
                        "NO_BID",
                        "PASSTHROUGH"
                    ]
                },
                "LoggingTypes": {
                    "type": "array",
                    "insertionOrder": false,
                    "uniqueItems": true,
                    "items": {
                        "$ref": "#/definitions/ResponderErrorMaskingLoggingType"
                    },
                    "minItems": 1,
                    "maxItems": 2
                },
                "ResponseLoggingPercentage": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                }
            },
            "required": [
                "HttpCode",
                "Action",
                "LoggingTypes"
            ]
        },
        "LinkAttributes": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ResponderErrorMasking": {
                    "type": "array",
                    "insertionOrder": false,
                    "uniqueItems": false,
                    "items": {
                        "$ref": "#/definitions/ResponderErrorMaskingForHttpCode"
                    },
                    "minItems": 1,
                    "maxItems": 200
                },
                "CustomerProvidedId": {
                    "type": "string"
                }
            }
        },
        "LinkState": {
            "type": "string",
            "enum": [
                "NEW",
                "REQUESTED",
                "ACCEPTED",
                "ACTIVE",
                "DECLINED",
                "DELETED",
                "UPDATING",
                "ACTIVATING",
                "DELETING",
                "ERROR",
                "REQUESTING",
                "INACTIVE",
                "ISOLATED",
                "ISOLATING",
                "RESTORING"
            ]
        },
        "CreatedTimestamp": {
            "type": "string"
        },
        "UpdatedTimestamp": {
            "type": "string"
        },
        "Arn": {
            "type": "string",
            "maxLength": 2048,
            "minLength": 20,
            "pattern": "^arn:aws:mpofxdevmu:[a-zA-Z0-9_-]+:[0-9]{12}:rtbApp/[a-zA-Z0-9-]+/link/[a-zA-Z0-9-]+$"
        },
        "Tag": {
            "description": "A key-value pair to associate with a resource.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Key": {
                    "type": "string",
                    "description": "The key name of the tag. You can specify a value that is 1 to 128 Unicode characters in length and cannot be prefixed with aws:. You can use any of the following characters: the set of Unicode letters, digits, whitespace, _, ., /, =, +, and -. ",
                    "minLength": 1,
                    "maxLength": 128
                },
                "Value": {
                    "type": "string",
                    "description": "The value for the tag. You can specify a value that is 0 to 256 Unicode characters in length and cannot be prefixed with aws:. You can use any of the following characters: the set of Unicode letters, digits, whitespace, _, ., /, =, +, and -. ",
                    "minLength": 0,
                    "maxLength": 256
                }
            },
            "required": [
                "Key"
            ]
        },
        "HttpResponderAllowed": {
            "type": "boolean"
        },
        "Tags": {
            "type": "array",
            "insertionOrder": false,
            "uniqueItems": true,
            "items": {
                "$ref": "#/definitions/Tag"
            },
            "minItems": 0,
            "maxItems": 50,
            "description": "Tags to assign to the Requester RtbApp."
        },
        "LinkDirection": {
            "type": "string",
            "enum": [
                "REQUEST",
                "RESPONSE"
            ]
        },
        "PublicEndpoint": {
            "type": "string",
            "pattern": "^(https)://.+$"
        },
        "LinkLogSettings": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ServiceLogs": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "LinkServiceLogSampling": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "ErrorLog": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 100
                                },
                                "FilterLog": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 100
                                }
                            }
                        }
                    },
                    "required": [
                        "LinkServiceLogSampling"
                    ]
                },
                "AnalyticsLogs": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "LinkAnalyticsLogSampling": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "BidLog": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 100
                                }
                            }
                        }
                    },
                    "required": [
                        "LinkAnalyticsLogSampling"
                    ]
                }
            }
        }
    },
    "properties": {
        "Tags": {
            "$ref": "#/definitions/Tags"
        },
        "LinkId": {
            "$ref": "#/definitions/LinkId"
        },
        "RtbAppId": {
            "$ref": "#/definitions/RtbAppId"
        },
        "PeerRtbAppId": {
            "$ref": "#/definitions/RtbAppId"
        },
        "LinkAttributes": {
            "$ref": "#/definitions/LinkAttributes"
        },
        "LinkState": {
            "$ref": "#/definitions/LinkState"
        },
        "CreatedTimestamp": {
            "$ref": "#/definitions/CreatedTimestamp"
        },
        "UpdatedTimestamp": {
            "$ref": "#/definitions/UpdatedTimestamp"
        },
        "Arn": {
            "$ref": "#/definitions/Arn"
        },
        "HttpResponderAllowed": {
            "$ref": "#/definitions/HttpResponderAllowed"
        },
        "LinkDirection": {
            "$ref": "#/definitions/LinkDirection"
        },
        "PublicEndpoint": {
            "$ref": "#/definitions/PublicEndpoint"
        },
        "LinkLogSettings": {
            "$ref": "#/definitions/LinkLogSettings"
        }
    },
    "required": [
        "RtbAppId",
        "PeerRtbAppId"
    ],
    "readOnlyProperties": [
        "/properties/LinkId",
        "/properties/Arn",
        "/properties/LinkState",
        "/properties/CreatedTimestamp",
        "/properties/UpdatedTimestamp",
        "/properties/LinkDirection"
    ],
    "conditionalCreateOnlyProperties": [
        "/properties/RtbAppId",
        "/properties/PeerRtbAppId",
        "/properties/LinkAttributes",
        "/properties/HttpResponderAllowed"
    ],
    "primaryIdentifier": [
        "/properties/Arn"
    ],
    "additionalIdentifiers": [
        [
            "/properties/RtbAppId",
            "/properties/LinkId"
        ]
    ],
    "handlers": {
        "create": {
            "permissions": [
                "mpofxdevmu:CreateLink",
                "mpofxdevmu:GetLink",
                "mpofxdevmu:TagResource",
                "mpofxdevmu:ListTagsForResource"
            ]
        },
        "read": {
            "permissions": [
                "mpofxdevmu:GetLink",
                "mpofxdevmu:ListTagsForResource"
            ]
        },
        "update": {
            "permissions": [
                "mpofxdevmu:UpdateLink",
                "mpofxdevmu:GetLink",
                "mpofxdevmu:TagResource",
                "mpofxdevmu:UntagResource",
                "mpofxdevmu:ListTagsForResource"
            ]
        },
        "delete": {
            "permissions": [
                "mpofxdevmu:DeleteLink",
                "mpofxdevmu:GetLink"
            ]
        },
        "list": {
            "handlerSchema": {
                "properties": {
                    "RtbAppId": {
                        "$ref": "#/definitions/RtbAppId"
                    }
                },
                "required": ["RtbAppId"]
            },
            "permissions": [
                "mpofxdevmu:ListLinks"
            ]
        }
    },
    "tagging": {
        "taggable": true,
        "tagOnCreate": true,
        "tagUpdatable": true,
        "cloudFormationSystemTags": true,
        "tagProperty": "/properties/Tags",
        "permissions": [
            "mpofxdevmu:TagResource",
            "mpofxdevmu:UntagResource",
            "mpofxdevmu:ListTagsForResource"
        ]
    },
    "additionalProperties": false
}